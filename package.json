{
  "name": "pdf-to-gherkin-converter",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "pdf",
    "gherkin",
    "feature",
    "converter",
    "electron",
    "chatgpt"
  ],
  "author": "",
  "license": "ISC",
  "description": "A desktop application that converts PDF requirements documents to Gherkin feature files using ChatGPT and can push them to Jira as Epics and Stories",
  "devDependencies": {
    "electron": "^36.3.2",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-store": "^10.0.1",
    "gherkin-parse": "^1.0.12",
    "jira-client": "^8.2.2",
    "openai": "^5.0.1",
    "pdf-parse": "^1.1.1"
  },
  "build": {
    "appId": "com.pdf-to-gherkin.app",
    "productName": "PDF to Gherkin Converter with Jira Integration",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  }
}
